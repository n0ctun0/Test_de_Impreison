<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundsr"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_bluetooth"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_fondo_color"
                android:text="Select Bluetooth"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtbluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bluettoh Seleccionado"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnPDF"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color"
                android:text="SELECT pdf"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtpathpdff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:text="pdf path"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_tag_sml300"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color4"
                android:text="Gondola Star SM L300" />

            <Button
                android:id="@+id/btn_pdf_r410"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color4"
                android:text="Pdf Bixolon R410" />

            <Button
                android:id="@+id/btn_pdf_zebra_alpha"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color4"
                android:text="PDF ZEBRA TO ALPHA3" />

            <Button
                android:id="@+id/btn_bmp_tsc"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color4"
                android:text="BMP TSC" />

            <Button
                android:id="@+id/btn_zebra_sdk"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_fondo_color4"
                android:text="Zebra SDK " />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>